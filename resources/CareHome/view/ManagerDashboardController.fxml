<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="CareHome.view.ManagerDashboardController">

    <top>
        <ToolBar>
            <Label text="Manager Dashboard" style="-fx-font-size: 16; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Logout" onAction="#handleLogout"/>
        </ToolBar>
    </top>

    <center>
        <StackPane>
            <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;" maxWidth="300">
                <Button text="View Wards" onAction="#handleViewWards" prefWidth="200"/>
                <Button text="Add New Patient" onAction="#handleAddNewPatient" prefWidth="200"/>
                <Button text="Patients Information" onAction="#handleInfoPatients" prefWidth="200"/>
                <Button text="Manage Patients" onAction="#handleManagePatients" prefWidth="200"/>
                <Button text="View Staff" onAction="#handleViewStaff" prefWidth="200"/>
                <Button text="Assign Shifts" onAction="#handleAssignShifts" prefWidth="200"/>
                <Button text="View Logs" onAction="#handleLogReports" prefWidth="200"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
