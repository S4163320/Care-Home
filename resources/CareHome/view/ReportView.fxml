<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="CareHome.view.ReportViewController" spacing="10" style="-fx-padding: 10;">
    <children>
        <Label text="System Audit Log" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <TableView fx:id="reportTable" prefHeight="500">
            <columns>
                <TableColumn fx:id="entryIdColumn" text="Entry ID" prefWidth="120"/>
                <TableColumn fx:id="timestampColumn" text="Timestamp" prefWidth="180"/>
                <TableColumn fx:id="staffIdColumn" text="Staff ID" prefWidth="100"/>
                <TableColumn fx:id="actionColumn" text="Action" prefWidth="120"/>
                <TableColumn fx:id="targetIdColumn" text="Target ID" prefWidth="100"/>
                <TableColumn fx:id="detailsColumn" text="Details" prefWidth="250"/>
            </columns>
        </TableView>
    </children>
</VBox>
