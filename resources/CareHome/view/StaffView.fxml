<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="CareHome.view.StaffViewController" spacing="10" style="-fx-padding: 10;">
    <children>
        <Label text="Staff Management" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <TableView fx:id="staffTable">
            <columns>
                <TableColumn fx:id="idColumn" text="Staff ID" prefWidth="100"/>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="150"/>
                <TableColumn fx:id="roleColumn" text="Role" prefWidth="100"/>
                <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Change Password" onAction="#handleChangePassword"/>
            <Button text="Add Staff" onAction="#handleAddStaff"/>
        </HBox>
    </children>
</VBox>
