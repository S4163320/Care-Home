<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="CareHome.view.AddStaffViewController" hgap="10" vgap="10" style="-fx-padding: 20;">
    <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Age:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="ageField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Gender:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="genderComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>

    <Label text="Staff ID:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="staffIdField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Username:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Password:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="passwordField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Role:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <ComboBox fx:id="roleComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1" prefWidth="200"/>

    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="8" GridPane.columnIndex="1">
        <Button text="Save" onAction="#handleSave"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="red" GridPane.rowIndex="9" GridPane.columnSpan="2"/>
</GridPane>
